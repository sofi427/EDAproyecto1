package proyecto1;

import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

public class LectorFichero {
	private static LectorFichero miLector;

	private LectorFichero(){}

	public static LectorFichero getLector(){
		if (miLector==null){
			miLector= new LectorFichero();
		}
	return miLector;
	}
	
	
	public String leerPublicaciones(String nombreFichero) {  
		RepositorioPublicaciones rep= RepositorioPublicaciones.getMiRepositorio();
		try {   
			Scanner fichero = new Scanner(new FileReader(nombreFichero));
			while (fichero.hasNextLine()) {
				String[] datos = fichero.nextLine().split(" # "); 
				String id= datos[1];
				String titulo= datos[2];
				rep.anadirPublicacion(id, titulo);
			
			}
				 
				
				
			
		
		
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
