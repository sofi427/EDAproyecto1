package proyecto1;

import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

public class LectorFichero {

	public LectorFichero(){}
	
	
	public String leerPublicaciones(String nom) {  
		RepositorioPublicaciones rep= RepositorioPublicaciones.getMiRepositorio();
		try {   
			Scanner fichero = new Scanner(new FileReader(nom));
			while (fichero.hasNextLine()) {
				String[] datos = fichero.nextLine().split(" # "); 
				String id= datos[1];
				String titulo= datos[2];
				rep.anadirPublicacion(id, titulo);
			
			}
				 
				
				
			
		
		
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
